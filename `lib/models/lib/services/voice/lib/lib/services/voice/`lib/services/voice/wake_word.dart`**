
```dart
import 'package:porcupine_flutter/porcupine_flutter.dart';
import 'package:audio_session/audio_session.dart';

class WakeWordService {
  static PorcupineManager? _manager;

  static Future<void> init() async {
    _manager = await PorcupineManager.fromKeywordPaths(
      keywordPaths: ['assets/hey_zaarvis.ppn'],
      onDetection: (_) => _startListening(),
      accessKey: ApiConfig.porcupineAccessKey,
    );
  }

  static void _startListening() {
    if (Platform.isIOS) {
      AudioSession.instance.setActive(true);
    }
    SpeechToTextService.listen(
      onResult: (text) => _handleCommand(text),
      onError: (e) => debugPrint('Wake Word Error: $e'),
    );
  }

  static void start() => _manager?.start();
}
```

